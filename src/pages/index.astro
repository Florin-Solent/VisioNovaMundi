---
const siteName = "Visio Nova Mundi";
const tagline = "Ventures that fund impact — building sustainable projects to help people.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
  </head>

  <body>
    <main>
      <header>
        <h1>{siteName}</h1>
        <p>{tagline}</p>
      </header>

      <section>
        <h2>Two pillars, one mission</h2>

        <div class="grid">
          <article class="card">
            <h3><a href="/impact">Impact (CIC)</a></h3>
            <p>
              Public-benefit work: community support, long-term initiatives, and measurable outcomes.
            </p>
          </article>

          <article class="card">
            <h3><a href="/ventures">Ventures</a></h3>
            <p>
              Private/commercial projects that generate revenue — with profits supporting our impact work.
            </p>
          </article>
        </div>
      </section>

      <footer>
        <small>© {new Date().getFullYear()} {siteName}</small>
      </footer>
    </main>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    background: #0b0f19;
    color: #e6e8ee;
  }

  main {
    max-width: 1000px;
    margin: 0 auto;
    padding: 56px 20px;
  }

  header {
    margin-bottom: 48px;
  }

  h1 {
    font-size: 48px;
    letter-spacing: -0.02em;
    margin: 0 0 12px;
  }

  p {
    font-size: 18px;
    line-height: 1.6;
    color: #b7bfd6;
    margin: 0;
    max-width: 70ch;
  }

  h2 {
    font-size: 26px;
    margin: 0 0 18px;
  }

  a {
    color: #e6e8ee;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }

  .grid {
    display: grid;
    gap: 18px;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .card {
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 16px;
    padding: 18px;
    background: rgba(255, 255, 255, 0.03);
  }

  .card h3 {
    margin: 0 0 8px;
    font-size: 18px;
  }

  footer {
    margin-top: 56px;
    color: #8891a9;
  }

  @media (max-width: 700px) {
    h1 {
      font-size: 36px;
    }
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
