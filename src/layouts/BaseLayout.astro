---
const { title = "Visio Nova Mundi" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content="Visio Nova Mundi CIC — Innovation, research and systems reform for long-term community impact." />
</head>

<body>
  <div class="bg-glow"></div>

  <header class="nav">
    <div class="container">
      <div class="logo">Visio Nova Mundi</div>

      <nav>
        <a href="/">Home</a>
        <a href="/impact">Impact</a>
        <a href="/projects">Projects</a>
        <a href="/contact" class="nav-btn">Contact</a>
      </nav>
    </div>
  </header>

  <main class="container">
    <slot />
  </main>

  <footer class="footer">
    © {new Date().getFullYear()} Visio Nova Mundi CIC
  </footer>

<style>
  :root {
    --bg: #f8fafc;
    --glass: rgba(255, 255, 255, 0.65);
    --border: rgba(255, 255, 255, 0.4);
    --text: #0f172a;
    --muted: #475569;
    --primary: #2563eb;
    --radius: 22px;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    background: var(--bg);
    color: var(--text);
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
  }

  /* Samsung-style soft glow background */
  .bg-glow {
    position: fixed;
    inset: 0;
    background:
      radial-gradient(circle at 20% 20%, rgba(37, 99, 235, 0.18), transparent 45%),
      radial-gradient(circle at 80% 30%, rgba(16, 185, 129, 0.15), transparent 45%),
      radial-gradient(circle at 50% 80%, rgba(59, 130, 246, 0.12), transparent 50%);
    z-index: -1;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Navigation */
  .nav {
    position: sticky;
    top: 0;
    backdrop-filter: blur(14px);
    background: var(--glass);
    border-bottom: 1px solid var(--border);
    z-index: 10;
  }

  .nav .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 20px;
  }

  .logo {
    font-weight: 700;
    letter-spacing: -0.02em;
    font-size: 18px;
  }

  nav {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  nav a {
    text-decoration: none;
    color: var(--muted);
    font-weight: 500;
    transition: all 0.2s ease;
  }

  nav a:hover {
    color: var(--text);
  }

  .nav-btn {
    padding: 10px 18px;
    border-radius: 999px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.15), rgba(16, 185, 129, 0.15));
    backdrop-filter: blur(6px);
    border: 1px solid rgba(37, 99, 235, 0.25);
    font-weight: 600;
  }

  /* Glass Cards */
  .card {
    background: var(--glass);
    backdrop-filter: blur(16px);
    border-radius: var(--radius);
    border: 1px solid var(--border);
    box-shadow:
      0 10px 40px rgba(0, 0, 0, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
  }

  /* Buttons */
  .btn {
    padding: 12px 20px;
    border-radius: 999px;
    border: 1px solid rgba(37, 99, 235, 0.25);
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.15), rgba(16, 185, 129, 0.15));
    backdrop-filter: blur(8px);
    font-weight: 600;
    text-decoration: none;
    color: var(--text);
    transition: all 0.25s ease;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(37, 99, 235, 0.2);
  }

  .footer {
    text-align: center;
    padding: 40px 20px;
    color: var(--muted);
    font-size: 14px;
  }

  @media (max-width: 768px) {
    nav {
      gap: 16px;
    }
  }
</style>

</body>
</html>
