---
const { title } = Astro.props;
const siteName = "Visio Nova Mundi";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} — ${siteName}` : siteName}</title>
  </head>

  <body>
    <header class="header">
      <div class="wrap">
        <a class="brand" href="/">
          <span class="brandMark">VNM</span>
          <span class="brandText">{siteName}</span>
        </a>

        <nav class="nav">
          <a href="/impact">Impact</a>
          <a href="/ventures">Ventures</a>
          <a href="/projects">Projects</a>
          <a href="/contact" class="cta">Contact</a>
        </nav>
      </div>
    </header>

    <main class="main wrap">
      <slot />
    </main>

    <footer class="footer">
      <div class="wrap">
        <small>© {new Date().getFullYear()} {siteName}</small>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    background: #0b0f19;
    color: #e6e8ee;
  }

  a {
    color: inherit;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }

  .wrap {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header {
    position: sticky;
    top: 0;
    backdrop-filter: blur(10px);
    background: rgba(11, 15, 25, 0.72);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    z-index: 20;
  }

  .header .wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .brand:hover {
    text-decoration: none;
  }

  .brandMark {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(255, 255, 255, 0.04);
    font-weight: 700;
    letter-spacing: 0.06em;
  }

  .brandText {
    font-weight: 650;
    letter-spacing: -0.01em;
  }

  .nav {
    display: flex;
    gap: 18px;
    align-items: center;
  }

  .cta {
    padding: 10px 14px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(255, 255, 255, 0.04);
    text-decoration: none;
  }
  .cta:hover {
    text-decoration: none;
    border-color: rgba(255, 255, 255, 0.22);
  }

  .main {
    padding: 48px 0 56px;
  }

  .footer {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    color: #8891a9;
    padding: 24px 0;
  }

  @media (max-width: 700px) {
    .nav {
      gap: 12px;
      font-size: 14px;
    }
    .brandText {
      display: none;
    }
  }
</style>
