---
const { title } = Astro.props;
const siteName = "Visio Nova Mundi CIC";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} — ${siteName}` : siteName}</title>
  </head>

  <body>
    <header class="header">
      <div class="wrap">
        <a class="brand" href="/">
          <span class="brandMark">VNM</span>
          <span class="brandText">{siteName}</span>
        </a>

        <nav class="nav">
          <a href="/about">About</a>
          <a href="/work">Our Work</a>
          <a href="/innovation">Innovation</a>
          <a href="/projects">Projects</a>
          <a href="/governance">Governance</a>
          <a href="/contact" class="cta">Contact</a>
        </nav>
      </div>
    </header>

    <main class="main wrap">
      <slot />
    </main>

    <footer class="footer">
      <div class="wrap">
        <small>© {new Date().getFullYear()} {siteName}</small>
      </div>
    </footer>
  </body>
</html>

<style>
  :global(:root) {
    --bg: #f7f8fb;
    --surface: #ffffff;
    --text: #0b1220;
    --muted: #4a5872;
    --border: rgba(15, 23, 42, 0.12);
  }

  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    background: radial-gradient(900px 400px at 20% 0%, rgba(39, 99, 235, 0.08), transparent 55%),
      radial-gradient(900px 400px at 90% 10%, rgba(16, 185, 129, 0.08), transparent 60%),
      var(--bg);
    color: var(--text);
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  :global(a:hover) {
    text-decoration: underline;
  }

  .wrap {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 20;
    backdrop-filter: blur(10px);
    background: rgba(247, 248, 251, 0.75);
    border-bottom: 1px solid var(--border);
  }

  .header .wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 12px;
  }

  .brand:hover {
    text-decoration: none;
  }

  .brandMark {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 14px;
    border: 1px solid var(--border);
    background: var(--surface);
    font-weight: 800;
    letter-spacing: 0.06em;
    box-shadow: 0 8px 26px rgba(0, 0, 0, 0.06);
  }

  .brandText {
    font-weight: 750;
    letter-spacing: -0.01em;
  }

  .nav {
    display: flex;
    gap: 18px;
    align-items: center;
    font-weight: 600;
    color: var(--muted);
  }

  .nav a:hover {
    text-decoration: none;
    color: var(--text);
  }

  .cta {
    padding: 10px 14px;
    border-radius: 14px;
    border: 1px solid var(--border);
    background: var(--surface);
    color: var(--text);
    box-shadow: 0 8px 26px rgba(0, 0, 0, 0.06);
  }

  .cta:hover {
    border-color: rgba(0, 0, 0, 0.18);
  }

  .main {
    padding: 44px 0 60px;
  }

  .footer {
    border-top: 1px solid var(--border);
    color: var(--muted);
    padding: 24px 0;
    background: rgba(255, 255, 255, 0.55);
  }

  @media (max-width: 900px) {
    .nav {
      gap: 12px;
      font-size: 14px;
    }
  }

  @media (max-width: 700px) {
    .brandText {
      display: none;
    }
    .nav a:not(.cta) {
      display: none;
    }
  }
</style>
